#!/bin/bash

# ===== KurdPhisher v800939399283832 =====
# Cyber Awareness Simulation
# made by a7madd

RED='\033[1;31m'
GREEN='\033[1;32m'
CYAN='\033[1;36m'
WHITE='\033[1;37m'
YELLOW='\033[1;33m'
MAGENTA='\033[1;35m'
RESET='\033[0m'

beep(){ echo -ne "\007"; }

banner(){
  clear
  echo -e "${RED}"
  toilet -f big "Kurd"
  echo -e "${GREEN}"
  toilet -f big "Phisher"
  echo -e "${MAGENTA}v800939399283832${RESET}"
  echo -e "${WHITE}Cyber Awareness Simulation${RESET}"
  echo -e "${WHITE}Educational Use Only${RESET}"
  echo -e "${WHITE}made by a7madd${RESET}"
  echo
}

loading(){
  echo -ne "${YELLOW}Processing"
  for i in {1..6}; do
    echo -ne "."
    sleep 0.25
  done
  echo -e "${RESET}"
}

strength(){
  l=${#1}
  if [ $l -lt 4 ]; then
    echo -e "${RED}Password strength: VERY WEAK${RESET}"
  elif [ $l -lt 7 ]; then
    echo -e "${YELLOW}Password strength: WEAK${RESET}"
  elif [ $l -lt 10 ]; then
    echo -e "${CYAN}Password strength: MEDIUM${RESET}"
  else
    echo -e "${GREEN}Password strength: STRONG${RESET}"
  fi
}

tip(){
  case $1 in
    Facebook) echo "Safety tip: Fake account recovery messages are common." ;;
    Instagram) echo "Safety tip: Verification DMs are often scams." ;;
    TikTok) echo "Safety tip: Free coins or rewards are usually fake." ;;
    Roblox) echo "Safety tip: Roblox never asks for your password." ;;
    Snapchat) echo "Safety tip: Fake friend requests can steal accounts." ;;
    X) echo "Safety tip: Giveaway and blue-check scams exist." ;;
    Discord) echo "Safety tip: Free Nitro links are dangerous." ;;
  esac
}

url_check(){
  echo
  echo -e "${CYAN}URL awareness:${RESET}"
  echo -e "${YELLOW}Watch for misspellings, short links, and fake domains.${RESET}"
}

menu(){
  echo -e "${CYAN}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${RESET}"
  echo -e "${CYAN}â”‚ KurdPhisher Main Menu     â”‚${RESET}"
  echo -e "${CYAN}â”œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¤${RESET}"
  echo "â”‚ 1) Facebook                â”‚"
  echo "â”‚ 2) Instagram               â”‚"
  echo "â”‚ 3) TikTok                  â”‚"
  echo "â”‚ 4) Roblox                  â”‚"
  echo "â”‚ 5) Snapchat                â”‚"
  echo "â”‚ 6) X (Twitter)             â”‚"
  echo "â”‚ 7) Discord                 â”‚"
  echo "â”‚ 8) Exit                    â”‚"
  echo -e "${CYAN}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${RESET}"
  echo
}

while true; do
  banner
  menu
  read -p "Select option: " opt
  beep

  case $opt in
    1) APP="Facebook" ;;
    2) APP="Instagram" ;;
    3) APP="TikTok" ;;
    4) APP="Roblox" ;;
    5) APP="Snapchat" ;;
    6) APP="X" ;;
    7) APP="Discord" ;;
    8) echo "Stay safe ğŸ‘‹"; exit ;;
    *) echo -e "${RED}Invalid option${RESET}"; sleep 1; continue ;;
  esac

  clear
  echo -e "${CYAN}=== $APP Login Simulation ===${RESET}"
  echo -e "${YELLOW}This screen is for awareness training${RESET}"
  echo

  read -p "Username / Email: " u
  read -s -p "Password: " p
  echo
  echo

  strength "$p"
  loading

  echo
  echo -e "${RED}Login unsuccessful${RESET}"
  echo -e "${WHITE}System response: Simulation mode${RESET}"
  echo -e "${WHITE}No information stored or transmitted${RESET}"
  echo
  echo -e "${CYAN}$(tip $APP)${RESET}"
  url_check
  echo
  read -p "Press Enter to return to menu..."
done
